{{> errorMessage}}
<div class="homepage-container">
{{#if user}}
  <div class="app-information">
    <div class="information-text">
      {{#if (greater user.newNotificationCount 1)}}
        <div class="new-notif-banner">
          <span class="material-symbols-outlined" style="font-variation-settings: 'FILL' 1;">notifications_unread</span>
          <h3>You have {{user.newNotificationCount}} new notifications!</h3>
          <a href="/activityCenter">
            <div class="view-now-btn">
              View Now
            </div>
          </a>
        </div>
      {{else}}
        {{#if (greater user.newNotificationCount 0)}}
          <div class="new-notif-banner">
            <span class="material-symbols-outlined" style="font-variation-settings: 'FILL' 1;">notifications_unread</span>
            <h3>You have {{user.newNotificationCount}} new notification!</h3>
            <a href="/activityCenter">
              <div class="view-now-btn">
                View Now
              </div>
            </a>
          </div>
        {{/if}}
      {{/if}}
      <h1 class="app-hook ellipsis-overflow welcome">Welcome</h1>
      <h1 class="app-hook ellipsis-overflow">{{user.username}}</h1>
      <h3 class="app-subtitle">Create folders for each trip you take. Store, share, and collaborate to add images taken during your travels.</h3>
      <div class="get-started-container">
        <a href="/tripFolders">
          <div class="get-started-btn">
            Get Started
          </div>
        </a>
      </div>      
    </div>
    <img class="sample-image" src="/images/sample-image.png" alt="Tripsync sample image">
  </div>
{{else}}
  <div class="app-information">
    <div class="information-text">
      <h1 class="app-hook">Easy and secure shared access to trip photos</h1>
      <h3 class="app-subtitle">Create folders for each trip you take. Store, share, and collaborate to add images taken during your travels.</h3>
      <a href="/users/login">
        <div class="get-started-btn">
          Get Started
        </div>
      </a>
      <div class="form-message sign-up-link">
        <span>Don't have an account?</span>
        <a class="form-link" href="/users/register">Sign Up</a>
      </div>
    </div>
    <img class="sample-image" src="/images/sample-image.png" alt="Tripsync sample image">
  </div>
{{/if}}
</div>