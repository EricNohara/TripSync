<div class="folder-content-container">
    {{> tripFolderNav folderType="home"}}
    <div class="folder-content-background">
        <div class="folder-content">
            <h1 class="trip-folder-page-title">Home</h1>
            <h3 class="trip-folder-page-subtitle">Recently Viewed Folders</h3>
            {{> folderPageHeader}}
            <ul class="folders-list">
                {{#each recentFolders}}
                    <a href="/tripFolders/{{this.id}}">
                        <li class="folder-list-item">
                            <div class="folder-name">
                            <span
                                class="material-symbols-outlined folder-list-icon"
                                style="font-variation-settings: 'FILL' 1;"
                            >
                                folder
                            </span>
                            <div class="ellipsis-overflow">
                                {{this.folderName}}
                            </div>
                            </div>
                            <p class="dimmed">{{convertReadableDate this.tripDate}}</p>
                            {{#if this.isShared}}
                                <p class="dimmed"><span class="material-symbols-outlined folder-list-icon" style="font-variation-settings: 'FILL' 1;">group</span>{{arrayLength this.users}} Users</p>
                            {{else}}
                                <p class="dimmed"><span class="material-symbols-outlined user-icon" style="font-variation-settings: 'FILL' 1;">account_circle</span>Me</p>
                            {{/if}}
                        </li>
                    </a>
                {{/each}}
            </ul>
        </div>
    </div>
</div>