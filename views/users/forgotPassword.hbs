<div class="container">
  <div class="input-form-container">
    <h1 class="input-form-title">Forgot Your Password?</h1>
    <h3 class="input-form-subtitle">Enter your account email to recieve instructions needed to reset your password</h3>
    {{> errorMessage}}
    {{> successMessage}}
    <form class="login-form submit-once-form" action="/users/sendPasswordResetEmail" method="POST">
      <input type="text" name="email" placeholder="Email" />
      <button class="form-submit-button submit-once-button" type="submit">Send Email</button>
      <div class="dummy-button hidden form-submit-button">Pending...</div>
    </form>
    <div class="form-message">
        <a class="form-link" href="/users/login">Cancel</a>
    </div>
  </div>
</div>